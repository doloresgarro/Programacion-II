						agregarAtras (l,ult,l^.info^.HI);
                      if (l^.info^.HD <> nil) then
						agregarAtras (l,ult,l^.info^.HD);
                      aux:= l;
                      l:= l^.sig;
                      dispose (aux);
                     end;
                     writeln;
                 end;
               end;
end;

